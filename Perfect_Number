class Solution {
public:
    bool checkPerfectNumber(int num) {
        // rolling sum of all integers that are divisors of num
        int sum = 0;
        
        // loop through all numbers half or under of num
        for(int i = 1; i <= num/2; i++) {
            // if it's a divisor, add to the sum
            if (num % i == 0) {
                sum += i;
            }
            // return false early if sum surpasses num
            if (sum > num) {
                return false;
            }
        }
        // sum and num must be equal for it to be true
        return num == sum;
    }
};
